import java.util.Scanner;
public class Main{
    public static void main(String[] args){
    Scanner sc=new Scanner(System.in);
    System.out.println("Total number of candies:");
    int c=sc.nextInt();
     System.out.println("Total number of people:");
    int p=sc.nextInt();
    int result =c/p;
    System.out.println("candies for each person:"+result);
    }
}
